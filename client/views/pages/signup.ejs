<% include ../partials/header %>
<div class="container mt-3">
    <h1>SIGNUP</h1>
    <form action="/signup" method="post" class="col-6">
        <div class="form-group">
            <label for="exampleInputEmail1">Email address</label>
            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" name="email" >
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
            <label for="id">ID</label>
            <input type="text" class="form-control" id="id" placeholder="Password" autocomplete="off" name="id" >
        </div>
        <div class="form-group">
            <label for="pass">Password</label>
            <input  type="password" class="form-control" id="pass" placeholder="Password" name="pw">
        </div>
        <div class="form-group">
            <label for="pass-check">Password Check</label>
            <input type="password" class="form-control" id="pass-check" placeholder="Password" name="pwcheck" >
        </div>
        <button type="submit" class="btn btn-secondary">Submit</button>
    </form>
</div>
<% include ../partials/footer %>